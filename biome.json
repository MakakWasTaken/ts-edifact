{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "files": {
    "ignoreUnknown": true
  },
  "formatter": {
    "ignore": [
      "coverage/**",
      "node_modules/**",
      "build/**",
      "public/**",
      "src/messageSpec/**",
      ".vscode/**"
    ],
    "enabled": true,
    "formatWithErrors": true,
    "indentStyle": "space",
    "indentWidth": 2
  },
  "linter": {
    "ignore": [
      "coverage/**",
      "node_modules/**",
      "build/**",
      "public/**",
      "src/messageSpec/**",
      ".vscode/**"
    ],
    "enabled": true,
    "rules": {
      "recommended": true,
      "style": {
        "noParameterAssign": "off"
      },
      "suspicious": {
        "noExplicitAny": "off",
        "noAsyncPromiseExecutor": "off",
        "noConsoleLog": "warn",
        "noAssignInExpressions": "off"
      },
      "correctness": {
        "noUnusedVariables": "error"
      },
      "performance": {
        "noAccumulatingSpread": "off"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "semicolons": "asNeeded"
    }
  }
}
